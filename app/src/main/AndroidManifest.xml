<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="univpm.iot_for_emergency">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-feature android:name="android.hardware.location.gps" />


    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="DATABASE"
            android:value="IOT.db" />
        <meta-data
            android:name="VERSION"
            android:value="10" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="univpm.iot_for_emergency" />

        <activity android:name=".View.Login" android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER"
                    android:theme="@style/AppTheme.Dark"
                    />
            </intent-filter>
        </activity>
        <activity android:name=".View.Registrazione" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".View.Modifica_dati" android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".View.Home"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"></activity>

        <service
            android:name=".View.Funzionali.BluetoothLeService"
            android:icon="@mipmap/ic_launcher"
            android:label="MyService"/>


    </application>

</manifest>